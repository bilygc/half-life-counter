<style is:global>
    :root {
        --hl-bg: #0a0600;
        --hl-primary: #d47800;
        --hl-secondary: #5e3a1a;
        --hl-accent: #e1e1e1;
        --hl-glow: #ffb400;
        --hl-text-dim: #a0a0a0;
    }

    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    html,
    body {
        height: 100%;
        width: 100%;
        font-family: "Outfit", system-ui, sans-serif;
    }

    body {
        background: var(--hl-bg);
        background-image:
            linear-gradient(rgba(10, 6, 0, 0.75), rgba(10, 6, 0, 0.75)),
            url("/lambda-bg.jpeg");
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        background-repeat: no-repeat;
        color: var(--hl-accent);
        position: relative;
        overflow-y: auto;
        overflow-x: hidden;
    }

    body::after {
        content: " ";
        display: block;
        position: fixed;
        top: 0;
        left: 0;
        bottom: 0;
        right: 0;
        background:
            linear-gradient(rgba(18, 16, 16, 0) 50%, rgba(0, 0, 0, 0.1) 50%),
            linear-gradient(
                90deg,
                rgba(212, 120, 0, 0.02),
                rgba(0, 212, 120, 0.01),
                rgba(0, 120, 212, 0.02)
            );
        z-index: 100;
        background-size:
            100% 4px,
            4px 100%;
        pointer-events: none;
        opacity: 0.4;
    }

    main {
        width: 100%;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: flex-start;
        padding: 120px 2rem 4rem;
    }

    .about-container {
        max-width: 800px;
        width: 100%;
        background: rgba(10, 6, 0, 0.6);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(212, 120, 0, 0.3);
        padding: 3rem;
        position: relative;
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.5);
    }

    .about-container::before {
        content: "";
        position: absolute;
        top: -1px;
        left: -1px;
        width: 20px;
        height: 20px;
        border-top: 2px solid var(--hl-primary);
        border-left: 2px solid var(--hl-primary);
    }

    .about-container::after {
        content: "";
        position: absolute;
        bottom: -1px;
        right: -1px;
        width: 20px;
        height: 20px;
        border-bottom: 2px solid var(--hl-primary);
        border-right: 2px solid var(--hl-primary);
    }

    .about-title {
        font-size: 2rem;
        letter-spacing: 4px;
        color: var(--hl-primary);
        margin-bottom: 2rem;
        border-bottom: 1px solid rgba(212, 120, 0, 0.2);
        padding-bottom: 1rem;
        text-shadow: 0 0 10px rgba(212, 120, 0, 0.3);
    }

    .highlight {
        color: #ff4444;
        text-shadow: 0 0 10px rgba(255, 68, 68, 0.5);
    }

    .about-content {
        line-height: 1.8;
        font-weight: 300;
    }

    .about-content p {
        margin-bottom: 1.5rem;
        color: var(--hl-accent);
        opacity: 0.9;
    }

    .about-content p:last-child {
        margin-bottom: 0;
    }
</style>
