---
interface Props {
  eventName: string;
  eventDate: string;
}

const { eventName, eventDate } = Astro.props;
---

<div class="counter-container" data-event-date={eventDate}>
  <h1 class="event-name">{eventName}</h1>

  <div class="main-counter">
    <div class="days-wrapper">
      <span id="days-count" class="days-count">0</span>
      <span class="days-label">days</span>
    </div>

    <div class="hms-wrapper">
      <div class="time-unit">
        <span id="hours-count" class="hms-count">00</span>
        <span class="hms-label">HRS</span>
      </div>
      <span class="separator">:</span>
      <div class="time-unit">
        <span id="minutes-count" class="hms-count">00</span>
        <span class="hms-label">MIN</span>
      </div>
      <span class="separator">:</span>
      <div class="time-unit">
        <span id="seconds-count" class="hms-count">00</span>
        <span class="hms-label">SEC</span>
      </div>
    </div>
  </div>

  <p class="date-label">
    LAST_TIME_IN_CITY_17 // {
      new Date("2007-10-10T00:00:00").toLocaleDateString()
    }
  </p>
</div>

<script>
  function updateCounter() {
    const container = document.querySelector(".counter-container");
    if (!container) return;

    const eventDate = container.getAttribute("data-event-date");
    if (!eventDate) return;

    const target = new Date(eventDate).getTime();
    const now = new Date().getTime();
    const diff = now - target;

    if (diff <= 0) {
      document
        .querySelectorAll(".hms-count, .days-count")
        .forEach((el) => (el.textContent = "0"));
      return;
    }

    const days = Math.floor(diff / (1000 * 60 * 60 * 24));
    const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
    const seconds = Math.floor((diff % (1000 * 60)) / 1000);

    const daysEl = document.getElementById("days-count");
    const hoursEl = document.getElementById("hours-count");
    const minutesEl = document.getElementById("minutes-count");
    const secondsEl = document.getElementById("seconds-count");

    if (daysEl) daysEl.textContent = days.toString();
    if (hoursEl) hoursEl.textContent = hours.toString().padStart(2, "0");
    if (minutesEl) minutesEl.textContent = minutes.toString().padStart(2, "0");
    if (secondsEl) secondsEl.textContent = seconds.toString().padStart(2, "0");
  }

  // Update immediately and then every second
  updateCounter();
  setInterval(updateCounter, 1000);
</script>

<style>
  .counter-container {
    display: flex;
    flex-direction: column;
    flex-grow: 2;
    align-items: center;
    justify-content: center;
    padding: 3rem;
    background: rgba(10, 6, 0, 0.45);
    border-radius: 4px;
    backdrop-filter: blur(8px);
    border: 1px solid var(--hl-secondary);
    box-shadow: 0 0 30px rgba(212, 120, 0, 0.1);
    text-align: center;
    color: var(--hl-accent);
    max-width: 600px;
    width: 95%;
    animation: fadeIn 1s ease-out;
    position: relative;
    overflow: hidden;
  }

  .counter-container::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 2px;
    background: linear-gradient(
      to right,
      transparent,
      var(--hl-primary),
      transparent
    );
  }

  .event-name {
    font-size: 1.2rem;
    font-weight: 700;
    margin-bottom: 2.5rem;
    letter-spacing: 5px;
    text-transform: uppercase;
    color: var(--hl-primary);
    text-shadow: 0 0 10px rgba(212, 120, 0, 0.5);
  }

  .main-counter {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    margin-bottom: 2.5rem;
  }

  .days-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .days-count {
    font-size: 8rem;
    font-weight: 700;
    line-height: 1;
    color: var(--hl-glow);
    text-shadow: 0 0 25px rgba(255, 180, 0, 0.5);
  }

  .days-label {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 8px;
    color: var(--hl-text-dim);
    margin-top: 1rem;
  }

  .hms-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1.5rem;
    padding: 1rem 2rem;
    background: rgba(94, 58, 26, 0.1);
    border: 1px solid rgba(94, 58, 26, 0.2);
    border-radius: 4px;
  }

  .time-unit {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: 60px;
  }

  .hms-count {
    font-size: 2.5rem;
    font-family: "Courier New", Courier, monospace;
    font-weight: 700;
    color: var(--hl-primary);
  }

  .hms-label {
    font-size: 0.75rem;
    letter-spacing: 2px;
    color: var(--hl-secondary);
    font-weight: 700;
  }

  .separator {
    font-size: 2rem;
    margin-top: -1.2rem;
    color: var(--hl-secondary);
    opacity: 0.5;
  }

  .date-label {
    font-size: 0.75rem;
    color: var(--hl-secondary);
    font-family: "Courier New", Courier, monospace;
    letter-spacing: 2px;
    border-top: 1px solid rgba(94, 58, 26, 0.2);
    padding-top: 1.5rem;
    width: 60%;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .days-count {
      font-size: 5rem;
    }
    .hms-count {
      font-size: 1.8rem;
    }
    .hms-wrapper {
      gap: 0.8rem;
      padding: 0.8rem 1rem;
    }
    .time-unit {
      min-width: 45px;
    }
  }
</style>
