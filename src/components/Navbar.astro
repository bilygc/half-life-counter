<script>
    const adsToggle = document.getElementById("ads-toggle");
    const adsToggleMobile = document.getElementById("ads-toggle-mobile");
    const adsStatus = document.getElementById("ads-status");
    const adsStatusMobile = document.getElementById("ads-status-mobile");
    const hamburgerBtn = document.getElementById("hamburger-btn");
    const mobileMenu = document.getElementById("mobile-menu");

    let adsEnabled = true;

    function toggleAds() {
        adsEnabled = !adsEnabled;
        document.body.classList.toggle("ads-hidden", !adsEnabled);

        if (adsStatus) adsStatus.textContent = adsEnabled ? "ON" : "OFF";
        if (adsStatusMobile)
            adsStatusMobile.textContent = adsEnabled ? "ON" : "OFF";

        if (adsToggle) adsToggle.classList.toggle("toggle-off", !adsEnabled);
        if (adsToggleMobile)
            adsToggleMobile.classList.toggle("toggle-off", !adsEnabled);
    }

    if (adsToggle) adsToggle.addEventListener("click", toggleAds);
    if (adsToggleMobile) adsToggleMobile.addEventListener("click", toggleAds);

    if (hamburgerBtn && mobileMenu) {
        hamburgerBtn.addEventListener("click", () => {
            hamburgerBtn.classList.toggle("active");
            mobileMenu.classList.toggle("active");
        });

        // Close menu when clicking a link
        const mobileLinks = mobileMenu.querySelectorAll(".mobile-nav-link");
        mobileLinks.forEach((link) => {
            link.addEventListener("click", () => {
                hamburgerBtn.classList.remove("active");
                mobileMenu.classList.remove("active");
            });
        });
    }
</script>

<style>
    .navbar {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 70px;
        background: rgba(10, 6, 0, 0.4);
        backdrop-filter: blur(10px);
        border-bottom: 1px solid rgba(212, 120, 0, 0.2);
        z-index: 1000;
        display: flex;
        align-items: center;
        padding: 0 2rem;
    }

