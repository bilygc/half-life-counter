        content: "";
        position: absolute;
        bottom: -5px;
        left: 0;
        width: 0;
        height: 2px;
        background: var(--hl-primary);
        transition: width 0.3s ease;
        box-shadow: 0 0 5px var(--hl-primary);
    }

