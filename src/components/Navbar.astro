<script>
    const adsToggle = document.getElementById("ads-toggle");
    const adsStatus = document.getElementById("ads-status");
    let adsEnabled = true;

    if (adsToggle && adsStatus) {
        adsToggle.addEventListener("click", () => {
            adsEnabled = !adsEnabled;
            document.body.classList.toggle("ads-hidden", !adsEnabled);
            adsStatus.textContent = adsEnabled ? "ON" : "OFF";
            adsToggle.classList.toggle("toggle-off", !adsEnabled);
        });
    }
</script>

