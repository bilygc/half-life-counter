        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 2px;
        cursor: pointer;
        transition: all 0.3s ease;
        border-radius: 4px;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .nav-toggle:hover {
        background: rgba(212, 120, 0, 0.2);
        border-color: var(--hl-primary);
        box-shadow: 0 0 10px rgba(212, 120, 0, 0.3);
    }

    .nav-toggle.toggle-off {
        color: var(--hl-text-dim);
        border-color: rgba(160, 160, 160, 0.3);
        background: rgba(160, 160, 160, 0.05);
    }

    .nav-toggle.toggle-off #ads-status,
    .nav-toggle.toggle-off #ads-status-mobile {
        color: #ff4444;
    }

    #ads-status,
    #ads-status-mobile {
        color: #44ff44;
        transition: color 0.3s ease;
    }

    .hamburger {
        display: none;
        flex-direction: column;
        justify-content: space-between;
        width: 30px;
        height: 21px;
        background: transparent;
        border: none;
        cursor: pointer;
        padding: 0;
        z-index: 1001;
    }

    .hamburger span {
        width: 100%;
        height: 3px;
        background-color: var(--hl-primary);
        border-radius: 10px;
        transition: all 0.3s linear;
        position: relative;
        transform-origin: 1px;
    }

    .hamburger.active span:first-child {
        transform: rotate(45deg);
    }

    .hamburger.active span:nth-child(2) {
        opacity: 0;
        transform: translateX(20px);
    }

    .hamburger.active span:nth-child(3) {
        transform: rotate(-45deg);
    }

    .mobile-menu {
        display: none;
        position: fixed;
        top: 0;
        right: -100%;
        width: 70%;
        height: 100vh;
        background: rgba(10, 6, 0, 0.95);
        backdrop-filter: blur(15px);
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 2rem;
        transition: right 0.3s ease-in-out;
        z-index: 1000;
        border-left: 1px solid rgba(212, 120, 0, 0.2);
    }

    .mobile-menu.active {
        right: 0;
    }

    .mobile-nav-link {
        color: var(--hl-accent);
        text-decoration: none;
        text-transform: uppercase;
        font-size: 1.2rem;
        font-weight: 700;
        letter-spacing: 4px;
        opacity: 0.8;
        transition: all 0.3s ease;
    }

    .mobile-nav-link:hover {
        opacity: 1;
        color: var(--hl-primary);
        text-shadow: 0 0 10px var(--hl-primary);
    }

    @media (max-width: 768px) {
        .navbar {
            padding: 0 1.5rem;
        }
        .nav-right.desktop-menu {
            display: none;
        }
        .hamburger {
            display: flex;
        }
        .mobile-menu {
            display: flex;
        }
        .nav-title {
            font-size: 1.2rem;
            letter-spacing: 2px;
        }
    }
</style>
